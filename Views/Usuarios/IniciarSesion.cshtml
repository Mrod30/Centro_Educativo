@model Centro_Educativo.Models.Usuarios

@{
    ViewBag.Title = "IniciarSesion";
}

<h2>Iniciar Sesion</h2>
<br />


<div class="container">
    <div class="form-group">
        <label for="User" class="control-label">Usuario</label>
        <input type="text" name="User" id="User"/>
    </div>

    <div class="form-group">
        <label for="Password" class="control-label">Password</label>
        <input type="password" name="Password"id="Password" />
    </div>

    <input type="button" class="btn btn-success" name="Enviar" id="Enviar" value="Enviar"/>
</div>



@section scripts{
<script>
    $("#Enviar").click(() => {
        var urlLogin = "/Usuarios/ValidateLogin";
        var datos = {
            UsuarioNombre: $("#User").val(),
            UsuarioPassword: $("#Password").val()
        }

        $.post(urlLogin, datos, (data) => {
            if (data == true) {
                window.location.replace("/Home/Index");
            }
            else {
                alert("Usuario o password incorrecto");
            }
        })
    })
</script>
    }